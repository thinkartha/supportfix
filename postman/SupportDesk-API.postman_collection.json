{
  "info": {
    "name": "SupportDesk API",
    "description": "SupportDesk API – Production (https://api.supportfix.ai). Run **Auth → Login** first; token is saved automatically. Create admin user: see `backend/scripts/SEED-ADMIN.md`",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "https://api.supportfix.ai"},
    {"key": "token", "value": ""}
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.token) { pm.collectionVariables.set('token', res.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@supportfix.ai\",\n  \"password\": \"your-password\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Me (current user)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/auth/me"
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/health"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List users",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users"
          }
        },
        {
          "name": "Get user by ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/:id"
          }
        },
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"newuser@example.com\",\n  \"role\": \"agent\",\n  \"organizationId\": null,\n  \"password\": \"optional-password\"\n}"
            },
            "url": "{{baseUrl}}/api/users"
          }
        },
        {
          "name": "Update user",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated@example.com\",\n  \"role\": \"admin\",\n  \"organizationId\": \"org-xxx\"\n}"
            },
            "url": "{{baseUrl}}/api/users/:id"
          }
        },
        {
          "name": "Delete user",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/:id"
          }
        }
      ]
    },
    {
      "name": "Organizations",
      "item": [
        {
          "name": "List organizations",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/organizations"
          }
        },
        {
          "name": "Get organization by ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/organizations/:id"
          }
        },
        {
          "name": "Create organization",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Acme Corp\",\n  \"plan\": \"standard\",\n  \"contactEmail\": \"contact@acme.com\"\n}"
            },
            "url": "{{baseUrl}}/api/organizations"
          }
        },
        {
          "name": "Update organization",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Acme Corp Updated\",\n  \"plan\": \"premium\",\n  \"contactEmail\": \"billing@acme.com\"\n}"
            },
            "url": "{{baseUrl}}/api/organizations/:id"
          }
        },
        {
          "name": "Delete organization",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/organizations/:id"
          }
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "List tickets",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/tickets",
            "urlQuery": [
              {"key": "status", "value": "open", "disabled": true},
              {"key": "priority", "value": "high", "disabled": true},
              {"key": "category", "value": "", "disabled": true},
              {"key": "organizationId", "value": "", "disabled": true},
              {"key": "assignedTo", "value": "", "disabled": true},
              {"key": "search", "value": "", "disabled": true}
            ]
          }
        },
        {
          "name": "Get ticket by ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/tickets/:id"
          }
        },
        {
          "name": "Create ticket",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Cannot login\",\n  \"description\": \"User reports 500 error on login page.\",\n  \"priority\": \"high\",\n  \"category\": \"technical\",\n  \"organizationId\": \"org-xxx\"\n}"
            },
            "url": "{{baseUrl}}/api/tickets"
          }
        },
        {
          "name": "Update ticket",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\",\n  \"priority\": \"medium\",\n  \"assignedTo\": \"user-xxx\"\n}"
            },
            "url": "{{baseUrl}}/api/tickets/:id"
          }
        },
        {
          "name": "Add message to ticket",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Investigating the issue.\",\n  \"isInternal\": false\n}"
            },
            "url": "{{baseUrl}}/api/tickets/:id/messages"
          }
        },
        {
          "name": "Add time entry to ticket",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hours\": 1.5,\n  \"description\": \"Debug and fix\",\n  \"date\": \"2025-02-14\"\n}"
            },
            "url": "{{baseUrl}}/api/tickets/:id/time-entries"
          }
        },
        {
          "name": "Request ticket conversion",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"proposedType\": \"bug\",\n  \"reason\": \"Confirmed as software bug\"\n}"
            },
            "url": "{{baseUrl}}/api/tickets/:id/convert"
          }
        }
      ]
    },
    {
      "name": "Approvals",
      "item": [
        {
          "name": "List approvals",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/approvals"
          }
        },
        {
          "name": "Update approval",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"side\": \"internal\",\n  \"status\": \"approved\"\n}"
            },
            "url": "{{baseUrl}}/api/approvals/:id"
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "List invoices",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/invoices"
          }
        },
        {
          "name": "Create invoice",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"organizationId\": \"org-xxx\",\n  \"month\": 2,\n  \"year\": 2025,\n  \"ticketsClosed\": 5,\n  \"totalHours\": 12.5,\n  \"ratePerHour\": 100,\n  \"totalAmount\": 1250\n}"
            },
            "url": "{{baseUrl}}/api/invoices"
          }
        },
        {
          "name": "Update invoice status",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"paid\"\n}"
            },
            "url": "{{baseUrl}}/api/invoices/:id"
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Dashboard stats",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/dashboard/stats"
          }
        },
        {
          "name": "Dashboard activities",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/dashboard/activities"
          }
        }
      ]
    }
  ]
}
